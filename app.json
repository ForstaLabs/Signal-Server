{
  "name": "TextSecure-Server",
  "description": "Forsta TextSecure-Server Fork",
  "env": {
    "ACCOUNT_DATABASE_URL": {
      "required": true
    },
    "MESSAGE_DATABASE_URL": {
      "required": true
    },
    "PUSHSERVER_HOST": {
      "required": false
    },
    "PUSHSERVER_PASSWORD": {
      "required": false
    },
    "PUSHSERVER_PORT": {
      "required": false
    },
    "PUSHSERVER_USERNAME": {
      "required": false
    },
    "REDIS_URL": {
      "required": false
    },
    "S3_ACCESSKEY": {
      "required": false
    },
    "S3_ACCESSSECRET": {
      "required": false
    },
    "S3_ATTACHMENTSBUCKET": {
      "required": false
    },
    "TWILIO_ACCOUNTID": {
      "required": false
    },
    "TWILIO_ACCOUNTTOKEN": {
      "required": false
    },
    "TWILIO_LOCALDOMAIN": {
      "required": false
    },
    "TWILIO_NUMBER": {
      "required": false
    }
  },
  "addons": [{
    "plan": "heroku-postgresql",
    "as": "ACCOUNTS_DATABASE"
  }, {
    "plan": "heroku-postgresql",
    "as": "MESSAGES_DATABASE"
  }, {
    "plan": "heroku-redis"
  }],
  "buildpacks": [{
    "url": "heroku/java"
  }]
}
