{
  "name": "TextSecure-Server",
  "description": "Heroku Deployment file",
  "scripts": {
  },
  "env": {
    "APN_BUNDLEID": {
      "required": true
    },
    "APN_KEY": {
      "required": true
    },
    "APN_CERT": {
      "required": true
    },
    "GCM_SENDERID": {
      "required": true
    },
    "GCM_APIKEY": {
      "required": true
    },
    "S3_ACCESSKEY": {
      "required": true
    },
    "S3_ACCESSSECRET": {
      "required": true
    },
    "S3_ATTACHMENTSBUCKET": {
      "required": true
    }
  },
  "addons": [{
    "plan": "heroku-postgresql",
    "as": "ACCOUNT_DATABASE"
  }, {
    "plan": "heroku-postgresql",
    "as": "MESSAGE_DATABASE"
  }, {
    "plan": "heroku-redis"
  }]
}
